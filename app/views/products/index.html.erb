<h1>Product Catalog</h1>

<% @products.each do |product| %>
  <div class="product">
    <h2><%= product.name %></h2>
    <p><%= product.description %></p>
    <p><strong>Price: <%= number_to_currency(product.price) %></strong></p>
    <%= link_to 'View Details', product, class: 'btn btn-primary' %>
  </div>
<% end %>
