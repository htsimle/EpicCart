<h1><%= @product.name %></h1>

<div class="product">
  <p><strong>Description:</strong> <%= @product.description %></p>
  <p><strong>Price:</strong> <%= number_to_currency(@product.price) %></p>
  <%= link_to 'Add to Cart', add_to_cart_path(@product), class: 'btn btn-primary' %>
</div>

<%= link_to 'Back to Catalog', products_path, class: 'btn btn-secondary' %>
